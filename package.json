{
  "name": "whatsapp-crm",
  "version": "2.0.0",
  "description": "WhatsApp CRM with Shopify Integration - Production Ready",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "node server/index.js",
    "dev:cron": "node server/jobs/reminder.cron.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:server\" \"npm run dev:cron\"",
    "build": "vite build",
    "preview": "vite preview",
    "server": "node server/index.js",
    "cron": "node server/jobs/reminder.cron.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .js,.jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,md}\"",
    "validate": "npm run lint && npm run format:check && npm run test"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^1.2.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "lint-staged": "^15.2.0",
    "lucide-react": "^0.474.0",
    "postcss": "^8.4.0",
    "prettier": "^3.2.4",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.0",
    "vitest": "^1.2.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
